{
  "compilerOptions": {
    "target": "ES2017",                          
    "module": "commonjs",                     
    "lib": ["ES2017"],                             
    "allowJs": true,                       
    "outDir": "./build",                        
    "rootDir": "./src",                       
    "removeComments": true,                  
    "esModuleInterop": true,                  
    "resolveJsonModule": true,
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@user/*": ["./src/resolvers/user/*"],
      "@patients/*": ["./src/resolvers/patients/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@entity/*": ["./src/entity/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}